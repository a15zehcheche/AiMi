{% extends "pages/main.html.twig" %}
{% block title %}Profile{% endblock %}


{% block main %}
    <div id="content">
    <div class="container-fluid" id="app">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Perfil</h1>
        </div>

        <div class="row" v-if="user">
            <div class="col-xl-4 col-sm-12 mb-4 text-center">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <form class="user" enctype="multipart/form-data">
                            <label class="custom-file">
                                <img :src="host + user.photo_path" class="mx-auto rounded-circle d-block" width="150" height="150" alt="avatar">
                                <h6 class="mt-4 font-weight-bold text-uppercase">{{ "{{ user.NOMBRE}}" }}</h6>
                                <small>clicar para seleccionar</small>
                                <input type="file"  class="custom-file-input" @change="onFileChanged">

                            </label>
                            <div class="col-lg-12">
                                <div v-if="avisos.photo" class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <strong> Aviso!</strong> Imagen no seleccionada.
                                    <button type="button" class="close" @click="avisos.photo = false">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <input type="button" class="btn btn-primary" value="Save Changes" @click="updateImage">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-8 col-sm-12 mb-4">
                <div class="card shadow border-0 mb-4">
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Full name</label>
                            <div class="col-lg-9">
                                <input class="form-control form-control-user" type="text"  v-model="nombre">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="button" class="btn btn-primary" value="Save Changes" @click="updateName">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow border-0 mb-4">
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Current password</label>
                            <div class="col-lg-9">
                                <input class="form-control form-control-user" v-model="PASSWORD_OLD" type="password">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Password</label>
                            <div class="col-lg-9">
                                <input class="form-control form-control-user" v-model="PASSWORD_NEW" type="password">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" >Confirm password</label>
                            <div class="col-lg-9">
                                <input class="form-control form-control-user"  v-model="PASSWORD_NEW_CONFIRM" type="password">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <div v-if="avisos.password" class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong> Aviso !</strong> comprueba los datos.
                                    <button type="button" class="close" @click="avisos.password = false">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <input type="button" class="btn btn-primary" value="Save Changes" @click="updatePassword">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
{% block customjs %}
    <script type="module" src="/build/js/config.js"></script>
    <script type="module" src="/build/js/profileVue.js"></script>
{% endblock %}


